{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom",
      "es6"
    ],
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "test/chai.d.ts"
      ]
    }

  },
  "include": [
    ".",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "test-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "wallaby.js"
  ]
}
